html,body {
  background-color: #f8f8f8;
  color: #333333;
  height: 100%;
  line-height: 20px
  overflow: hidden;
  -webkit-overflow-scrolling: touch;
}
.love-page {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding-top: 50px;
  background-color: #fff;
  overflow-y: scroll;
}
.nomal-btn
  margin 0 auto
  width 150px
  height 40px
  line-height 40px
  text-align center
  background-color rgba(19, 68, 65, 1)
  font-size 16px
  color #fff
  border-radius 20px
.nomal-empty-btn
  background-color rgba(19, 68, 65, .6)
.register-btn
  display inline-block
  margin-left 10px
  margin-right 10px
  width 100px
  height 40px
  line-height 40px
  border 1px solid #333
  border-radius 5px
  font-size 14px
  color #333
  cursor pointer
.login-input
  height 40px
  line-height 40px
  font-size 14px
  margin-top 30px
.user-icon
  display inline-block
  width 16px
  height 16px
  background-size 100%
